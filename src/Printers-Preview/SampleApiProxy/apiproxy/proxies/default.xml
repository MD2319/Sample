<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>Verify-Access-Token</Name>
            </Step>
            <Step>
                <Name>Remove-access-token-authorization</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <Flows>
        <Flow name="preview">
            <Description>Generates a preview of a ZPL print job as a PNG image</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/preview") and (request.verb = "POST")</Condition>
        </Flow>
    </Flows>
    <HTTPProxyConnection>
        <BasePath>/v1/savanna-preview-api</BasePath>
        <VirtualHost>default</VirtualHost>
		<VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>